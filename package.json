{
    "name": "whatstron",
    "productName": "WhatsTron",
    "homepage": "https://vjba.github.io/whatstron/",
    "version": "1.3.2",
    "description": "Desktop WhatsApp client for Linux, built with Electron",
    "main": "main.js",
    "license": "MIT",
    "repository": "https://github.com/vjba/whatstron.git",
    "author": {
        "name": "vjba",
        "email": "hello@vjba.me",
        "url": "https://vjba.me"
    },
    "bugs": {
        "url": "https://github.com/vjba/whatstron/issues",
        "email": "hello@vjba.me"
    },
    "scripts": {
        "test": "yarn lint && nyc mocha",
        "lint": "npx eslint main.js --fix",
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --linux --publish onTag",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "electron-context-menu": "^0.14.0",
        "electron-debug": "^3.0.1",
        "electron-store": "^4.0.0",
        "electron-unhandled": "^3.0.0",
        "electron-updater": "^4.1.2",
        "electron-util": "^0.12.1",
        "node-fetch": "^2.6.0"
    },
    "devDependencies": {
        "electron": "^6.0.2",
        "electron-builder": "^21.2.0",
        "eslint": "^6.2.0",
        "eslint-config-standard": "^13.0.1",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.0",
        "mocha": "^6.2.0",
        "nyc": "^14.1.1",
        "spectron": "^8.0.0"
    },
    "build": {
        "publish": [
            {
                "provider": "github",
                "owner": "vjba",
                "repo": "whatstron"
            }
        ],
        "appId": "com.vjba.WhatsTron",
        "linux": {
            "icon": "assets/icon.icns",
            "target": [
                "deb",
                "AppImage",
                "freebsd",
                "rpm"
            ],
            "category": "Network;Chat",
            "desktop": {
                "StartupWMClass": "whatstron"
            }
        },
        "appImage": {
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "deb": {
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "depends": [
                "gconf2"
            ]
        },
        "freebsd": {
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        }
    }
}