{
    "name": "whatstron",
    "productName": "WhatsTron",
    "homepage": "https://vjba.github.io/whatstron/",
    "version": "1.1.0",
    "description": "Desktop WhatsApp client for Linux, built with Electron",
    "main": "main.js",
    "license": "MIT",
    "repository": "git+ssh://github.com/vjba/whatstron.git",
    "author": {
        "name": "vjba",
        "email": "hello@vjba.me",
        "url": "https://vjba.me"
    },
    "bugs": {
        "url": "https://github.com/vjba/whatstron/issues",
        "email": "hello@vjba.me"
    },
    "scripts": {
        "test": "yarn lint && nyc mocha",
        "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov -t 5ff7c9dc-d846-4a57-af9a-78f8214f8138",
        "lint": "npx standard main.js",
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --linux",
        "release": "build",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "electron-context-menu": "^0.12.1",
        "electron-debug": "^3.0.0",
        "electron-store": "^3.3.0",
        "electron-unhandled": "^2.2.0",
        "electron-updater": "^4.0.14",
        "electron-util": "^0.12.0",
        "node": "^12.6.0"
    },
    "devDependencies": {
        "codecov": "^3.5.0",
        "electron": "^4.2.6",
        "electron-builder": "^20.43.0",
        "mocha": "^6.1.4",
        "nyc": "^14.1.1",
        "spectron": "^6.0.0",
        "standard": "^12.0.1"
    },
    "keywords": [
        "Electron",
        "WhatsApp",
        "Desktop",
        "Linux",
        "MIT",
        "FOSS",
        "Open Source",
        "Messenger",
        "Instant Messaging",
        "AppImage",
        "deb",
        "freebsd",
        "snap",
        "sapcraft",
        "flatpack",
        "flathub"
    ],
    "os": [
        "linux"
    ],
    "cpu": [
        "x64"
    ],
    "engines": {
        "node": ">=8.0.0"
    },
    "build": {
        "publish": [
            {
                "provider": "github",
                "owner": "vjba",
                "repo": "whatstron"
            }
        ],
        "appId": "com.vjba.WhatsTron",
        "linux": {
            "icon": "assets/",
            "target": [
                "AppImage",
                "deb",
                "tar.xz",
                "snap",
                "freebsd",
                "rpm"
            ],
            "category": "Network;Chat",
            "desktop": {
                "StartupWMClass": "whatstron"
            }
        },
        "deb": {
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "depends": [
                "gconf2"
            ]
        },
        "appImage": {
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "freebsd": {
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "snap": {
            "confinement": "strict",
            "plugs": [
                "default"
            ],
            "stagePackages": [
                "default"
            ]
        }
    }
}
